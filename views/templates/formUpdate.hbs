         <input name="leaseReturnDate"type="text" value="{{this.leaseReturnDate}}">

         <label for="carColor">Color</label>
         <input name="carColor"type="text" value="{{this.carColor}}">

         <label for="seatsNumber">Numero de asientos</label>
         <input name="seatsNumber"type="text" value="{{this.seatsNumber}}">

         <label for="doorNumber">Numero de puertas</label>
         <input name="doorNumber"type="text" value="{{this.doorNumber}}">

         <label for="trunkSize">Tamaño maletero</label>
         <input name="trunkSize"type="text" value="{{this.trunkSize}}">

         <label for="co2Emissions">Emisiones de CO2</label>
         <input name="co2Emissions"type="text" value="{{this.co2Emissions}}">

         <label for="carType">Tipo vehículo</label>
