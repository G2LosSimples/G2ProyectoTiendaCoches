<form action="/updateCar/{{this._id}}" method="POST"> {{!--  url a la que mandamos el contenido del formulario --}}
     <fieldset> {{!--NOMBRE DE INPUT TIENE QUE COINCIDIR CON LOS ATRIBUTOS DEL MODELO!!! --}}
         <label for="carBrand">carBrand</label>
         <input name="carBrand"type="text" value="{{this.carBrand}}">

         <label for="carModel">Modelo</label>
         <input name="carModel"type="text" value="{{this.carModel}}">

         <label for="modelYear"></label>
         <input name="modelYear"type="text" value="{{this.modelYear}}">

         <label for="nextItvDate">Próxima ITV</label>
         <input name="nextItvDate"type="text" value="{{this.nextItvDate}}">

         <label for="sellingPrice">Precio de venta</label>
